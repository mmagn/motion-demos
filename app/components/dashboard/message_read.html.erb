<div class="card shadow-none mt-3 border border-light">
  <div class="card-body">
    <div class="mb-3">
      <button type="button" class="float-left btn btn-default" data-motion="previous" data-value="decrease" <%= "disabled" unless @on_previous %>>
        <%= svg "caret-left-fill" %> Previous
      </button>
      <button type="button" class="float-right btn btn-default" data-motion="next" data-value="increase" <%= "disabled" unless @on_next %>>
        Next <%= svg "caret-right-fill" %>
      </button>
    </div>


    <div class="media mt-3 mb-3">
      <%= svg "person-circle", width: "5em", height: "5em" %>
        <div class="ml-3 media-body">
            <span class="media-meta float-right"><%= display_sent_at %></span>
            <h4 class="text-primary m-0"><%= from.name %></h4>
            <h5><small class="text-muted">From : <%= from.email %></small></h5>
            <h5><small class="text-muted">to : <%= to.name %></small></h5>
        </div>
    </div>


      <div class="mt-4 mb-4 media-content">
        <p><%= content %></p>
      </div>

      <% @replies.each do |msg| %>
        <hr />

        <%= render Dashboard::MessageRead.new(message: msg, user: user) %>
      <% end %>

      <% if show_response? %>
        <hr />

        <%= render Dashboard::MessageForm.new(from: user, to: to_new_message, hide_to_from: true, on_submit: reply_sent_callback) %>
      <% end %>
  </div>
</div>
