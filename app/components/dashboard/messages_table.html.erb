<div class="panel panel-default m-t-20">
    <div class="panel-body">
        <table class="table table-hover mails">
            <tbody>
              <% messages.each_with_index do |msg, i|  %>
                  <%= render Dashboard::MessageRow.new(user: user, message: msg, row: i, on_click: on_click) %>
              <% end %>
            </tbody>
        </table>
        <hr>
        <div class="row">
            <div class="col-xs-7">
                Showing <%= messages.length %> of <%= messages.length %>
            </div>
            <div class="col-xs-5">
                <div class="btn-group pull-right">
                  <button type="button" class="btn btn-default" data-motion="paginate" data-valu="increase">
                      <i class="fa fa-chevron-left"></i>
                    </button>
                  <button type="button" class="btn btn-default" data-motion="paginate" data-value="decrease">
                    <i class="fa fa-chevron-right"></i>
                  </button>
                </div>
            </div>
        </div>
    </div> <!-- panel body -->
</div>