<main>
  <section class="board">
    <h4>Restoration Game</h4>
    <section class="grid">
      <% (0..Math.sqrt(@board.size)-1).each do |i| %>
        <% (0..Math.sqrt(@board.size)-1).each do |j| %>
          <div class="tile" data-motion="paint">
            <img src="/assets/<%= @index[@board[i*9+j]] %>.svg" data-y="<%= i %>" data-x="<%= j %>" />
          </div>
        <% end %>
      <% end %>
    </section>
  </section>
  <section class="selector">
    <%= button_tag "Gather", class: "number-btn", data: { motion: "change_selected", value: "-1" } %>
    Place:
    <%= button_tag "Dirt", class: "number-btn", data: { motion: "change_selected", value: "1" } %>
    <%= button_tag "Grass (#{seeds})", class: "number-btn", data: { motion: "change_selected", value: "2" } %>
    <%= button_tag "Tree (#{saplings})", class: "number-btn", data: { motion: "change_selected", value: "3" } %>
    <%= button_tag "Berries (#{seeds})", class: "number-btn", data: { motion: "change_selected", value: "4" } %>
  </section>
</main>